@model AirBench.ViewModels.RegisterUser

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "register-form"}))
{
    @Html.ValidationSummary()
    <div>
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { id = "firstname" })
    </div>

    <div>
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { id = "lastname" })
    </div>
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { id = "email" })
    </div>

    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { id = "password" })
    </div>

    <div>
        <button id="register" type="submit" class="pure-button">Register</button>
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "pure-button" })
    </div>

}

<p>
    @Html.ActionLink("Login", "Login")
</p>


<script src="~/Scripts/register.js"></script>